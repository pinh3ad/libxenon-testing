#fail_exit fail_message
function fail_exit {
    RED='\e[0;31m'
	NC='\e[0m'
    echo -e "${RED}FAILURE!!!${NC}"
    echo -e $1
    echo -e "Check the build log for more details"
    echo -e "$LOGFILE"
    exit 1
